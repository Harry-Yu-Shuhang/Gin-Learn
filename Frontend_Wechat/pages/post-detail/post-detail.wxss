.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
  align-items: center;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  /* 设置圆形以及半径 */
  border-radius: 50%;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
  font-weight: 400;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

.date{
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
  color: #999;
}

.title{
  margin-left: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 25rpx;
  color: #4b556c;
  letter-spacing: 1.5px;
}

.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.horizon-line{
  width:660rpx;
  height:1px;
  background-color: #e5e5e5;
  position: absolute;
  /* 让线在图标下方 */
  z-index: -99;
}

.popularity{
  display:flex;
  /* 跟线的宽度一样 没宽度的话justify-content没用 */
  width: 660rpx; 
  flex-direction: row;
  justify-content: flex-end;
}

.popularity-icon{
  margin-left: 20rpx;
  background-color: white;
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  line-height: 44rpx;
  letter-spacing: 1px;
}